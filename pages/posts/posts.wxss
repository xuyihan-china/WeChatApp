/* pages/posts/posts.wxss */
swiper{
    width:100%;
    height:500rpx;
}
swiper image{
    width:100%;
    height:500rpx 
}
.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 10rpx; /* 水平方向尽量用rpx */
}
.post-author-date{
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.post-author{
    height: 60rpx;
    width: 60rpx;
    vertical-align: middle;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    font-size: 26rpx;
}
.post-title{
    font-size: 36rpx;
    font-weight: 600;
    margin-top: 0rpx;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
    color: #333;/* 主流的文字颜色 */
}
.postImage{
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}
.postContent{
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}
.postLike{
    font-size: 26rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.postLikeImage{
    height: 32rpx;
    width: 32rpx;
    margin-right: 16rpx;
}
.postLikeText{
    margin-right: 40rpx;
}
.post-title{
    display: flex;
    flex-direction: row;
    align-items: center;
}